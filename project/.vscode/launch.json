        {
            "name": "Python Debugger: Debugger Intro",
            "type": "debugpy",
            "request": "launch",
            "program": "debugger_intro.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Exercise",
            "type": "debugpy",
            "request": "launch",
            "program": "exercise.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Exercise Correct" ,
            "type": "debugpy",
            "request": "launch",
            "program": "exercise_correct.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
